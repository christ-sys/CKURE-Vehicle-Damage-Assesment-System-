<Report>:
    name: "report"
    GridLayout:
        cols: 1
        MDTopAppBar:
            title: "Report"
            left_action_items: [["arrow-left", lambda x : root.back(self.icon)]]
            
            elevation: 0
            md_bg_color:(0/255, 139/255, 199/255)
            # on_action_button_release: 
        
        GridLayout:
            cols: 1
            spacing: 5
            
            
                
            BoxLayout:
                orientation: 'vertical'
                # cols: 1
                # padding: 10 
                # spacing: 20

                # ScrollView:

                # MDLabel:
                #     text: "Accident Details"
                #     halign: 'center'
                #     font_style: 'H6'
                # post_hint: {'center_x':0.05, 'center_y':0.05}
                ScrollView:
                    padding: 10
                    MDList:
                        padding: 30
                        # adaptive_height: True
                        Image:
                            id: imgSrc
                            pos_hint:{"center_x": .5, "center_y": .005}
                            source: str(app.myImage.source)
                            keep_ratio: True
                            size_hint_y: None
                            height: dp(250)
                        MDTextField:
                            hint_text: "Driver Name"
                            helper_text_mode: "persistent"
                            width: dp(10)
                        MDTextField:
                            hint_text: "Location"
                            helper_text_mode: "persistent"
                            width: dp(10)
                        MDTextField:
                            # date: True
                            hint_text: "Date"
                            helper_text_mode: "persistent"
                            width: dp(10)
                        MDTextField:
                            hint_text: "Time"
                            helper_text_mode: "persistent"
                            width: dp(10)
                        MDFillRoundFlatButton:
                            text: "Next"
                            text_color: "white"
                            halign: 'center'
                            font_size: '20sp'
                            size_hint_x: 0.9
                            on_release: 
                                root.manager.current='driverdetails'
                                root.manager.transition.direction='left'
                            
                        