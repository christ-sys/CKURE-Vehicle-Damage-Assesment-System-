<SignUp>:
    name: "signup"
    ScrollView:
        size_hint: (1, 1)
        GridLayout:
            cols: 1
            spacing: 0
            padding: 8
            size_hint_y: None
            height: self.minimum_height
            MDTextButton:
                text: 'Back to Login'
                theme_text_color: "Custom"
                text_color: 9/255,65/255,176/255
                user_font_size: "18sp"
                on_release: 
                    app.root.current="login"
                    root.manager.transition.direction="right"

            MDLabel:
                size_hint_y: None
                text: "Proceed to\nRegistration"
                font_size: "22sp"

            MDTextField:
                id: name
                hint_text: "Name"
                pos_hint:{"center_x": .5}
                
            MDTextField:
                id: email
                hint_text: "Email"
                pos_hint:{"center_x": .5}
                
            MDTextField:
                id: address
                hint_text: "Address"
                pos_hint:{"center_x": .5}
                
            
            MDTextField:
                id: contact
                hint_text: "Contact No."
                pos_hint:{"center_x": .5}
                
            MDTextField:
            # dapat calendar tapos matic na yung sa age
                id: dob
                hint_text: "Date of Birth"
                pos_hint:{"center_x": .5}
            MDTextField:
            # magbbase sa DOB
                id: age
                hint_text: "Age"
                pos_hint:{"center_x": .5}

            MDTextField:
            # dapat dropdown ito
                id: gender
                hint_text: "Gender"
                pos_hint:{"center_x": .5}
                
            MDTextField:
                id: username
                hint_text: "Username"
                pos_hint:{"center_x": .5}
            MDTextField:
                id: password
                hint_text: "Password"
                password: True
                pos_hint:{"center_x": .5}
            
            MDRaisedButton:
                text: "Register"
                pos_hint:{"center_x": .5}
                mode: "rectangle"
                md_bg_color: 9/255,65/255,176/255
                size_hint_x: 0.9
                size_hint_y: 0.1
                on_press: root.reg_user()